@page
@model WebApplicationCore.Pages.Departamentos.GridModel
@{
}

<div class="container">

    <div class="card">

        <div class="card-header">
            Departamentos
        </div>

        <div class="card-body">

            <div class="card-row">
                <a class="btn btn-outline-primary" asp-page="Edit">
                    <i class=' bx bxs-add-to-queue'></i>
                </a>

                <div class="col-12">
                    <table id="GridView" class="table table-bordered table-striped table-hover">

                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Descripción</th>
                                <th>Ubicación</th>
                                <th>Estado</th>
                                <th></th>
                            </tr>
                        </thead>

                        <tbody>
                            @foreach (var item in Model.GridList)
                            {
                                <tr>
                                    <td>@item.ID</td>
                                    <td>@item.Descripcion</td>
                                    <td>@item.Ubicacion</td>
                                    <td>@(item.Estado ? "Activo": "Inactivo")</td>
                                    <td>
                                        <a class="btn btn-outline-primary" asp-page="Edit" asp-route-id="@item.ID">
                                            <i class='bx bxs-edit'></i>
                                        </a>
                                        <button type="button" class="btn btn-outline-primary"
                                                onclick="DepartamentoGrid.OnclickEliminar(@item.ID)">
                                            <i class='bx bx-trash'></i>
                                        </button>
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

</div>

@section Scripts{
    <script>

        var MensajeApp = "@Html.Raw(Model.Mensaje)";

    </script>

    <script defer src="~/App/Departamentos/Grid.js"></script>

}